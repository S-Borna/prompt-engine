{
    "manifest_version": 3,
    "name": "PRAXIS â€” AI Prompt Enhancer",
    "version": "1.0.0",
    "description": "Instantly enhance your AI prompts in ChatGPT, Claude, and Gemini. Get 10x better responses with one click.",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "https://praxis.saidborna.com/*"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://chatgpt.com/*",
                "https://chat.openai.com/*",
                "https://claude.ai/*",
                "https://gemini.google.com/*",
                "https://grok.com/*",
                "https://x.com/i/grok*"
            ],
            "js": [
                "content/content.js"
            ],
            "css": [
                "content/content.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "icons/*"
            ],
            "matches": [
                "https://chatgpt.com/*",
                "https://chat.openai.com/*",
                "https://claude.ai/*",
                "https://gemini.google.com/*",
                "https://grok.com/*",
                "https://x.com/*"
            ]
        }
    ]
}